@model HSF.BaseSystemModel.Model.DTO.UserDTO

@{
    ViewBag.Title = "ورود";
    Layout = "~/Views/User/_LayoutUser.cshtml";
}



<div class="register-box">
    <div class="register-logo">
        <a href="../../index2.html"><b>ثبت نام در سایت</b></a>
    </div>

    <div class="register-box-body">
        <p class="login-box-msg">ثبت نام کاربر جدید</p>

        @*<form action="../../index.html" method="post">*@

        @using (Html.BeginForm("Register", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group has-feedback">
                @*<input type="text" class="form-control" placeholder="نام و نام خانوادگی">*@
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "نام" } })
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                @*<input type="text" class="form-control" placeholder="نام کاربری">*@
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "نام خانوداگی" } })
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                @*<input type="email" class="form-control" placeholder="ایمیل">*@
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "ایمیل" } })
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                @*<input type="password" class="form-control" placeholder="رمز عبور">*@
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", placeholder = "رمز عبور" } })
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                @*<input type="password" class="form-control" placeholder="تکرار رمز عبور">*@
                @Html.EditorFor(model => model.RePassword, new { htmlAttributes = new { @class = "form-control", @type = "password", placeholder = "تکرار رمز عبور" } })
                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox"> من <a href="#">قوانین و شرایط</a> را قبول میکنم.
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-12">
                    <input type="submit" onclick="return Validate()" value="ثبت نام" class="btn btn-primary btn-block btn-flat" />
                </div>
                <!-- /.col -->
            </div>
        }
        @*</form>*@



        @*<a href="login.html" class="text-center">من قبلا ثبت نام کرده ام</a>*@
        @Html.ActionLink("من قبلا ثبت نام کرده ام", "Login", "User")
    </div>
    <!-- /.form-box -->
</div>
<!-- /.register-box -->



<script>
    function Validate() {
        if ($("#FullName").val() == "" ||
            $("#UserName").val() == "" ||
            $("#Email").val() == "" ||
            $("#Password").val() == "" ||
            $("#RePassword").val() == ""
        ) {
            alert('برخی از فیلد ها خالی هستند');
            return false;
        }

        if ($("#Password").val() != $("#RePassword").val()) {
            alert('کلمه عبور و تکرار آن با هم برابر نیستند');
            return false;
        }

        return true;
    }
</script>
